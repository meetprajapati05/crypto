<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="30sp"
        app:cardElevation="2sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/topDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="85sp">

                <androidx.cardview.widget.CardView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="15sp"
                    app:cardCornerRadius="55sp">

                    <ImageView
                        android:id="@+id/portfolioImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_launcher_background" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/textLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80sp"
                    android:layout_marginTop="15sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/portfolioCurrencyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bitcoin"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/portfolioCurrencySymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3sp"
                        android:textColor="#616161"
                        android:text="btc"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="15sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/portfolioCurrencyPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26199.00"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="18sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="$" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/portfolioCurrencyInDeVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="3sp"
                        android:text="-1.23%"
                        android:textSize="18sp" />

                </LinearLayout>


            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/topDetailLayout"
                android:background="@color/black"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp" />

            <RelativeLayout
                android:id="@+id/bottomDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginTop="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/portfolioCurrencyQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/portfolioCurrencySymbolHolding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3sp"
                        android:textColor="#616161"
                        android:text="Quantity"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="40sp"
                    android:layout_marginBottom="15sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:id="@+id/portfolioHoldingPrice"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="110.50"
                            android:textAlignment="viewEnd"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="18sp"
                            android:layout_height="20sp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="$" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3sp"
                        android:textColor="#616161"
                        android:text="Value"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/portfolioLeverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="5x"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>