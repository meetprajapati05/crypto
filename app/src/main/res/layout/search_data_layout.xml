<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/searchLayoutCard"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        style="@style/CARD"
        app:cardCornerRadius="20sp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCryptoImg"
                android:layout_width="60sp"
                android:layout_height="60sp"
                app:cardCornerRadius="60sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageCryptoSearch"
                    android:scaleType="fitCenter"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txtCryptoNameSearch"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="Bitcoin"
                android:textSize="22sp"
                style="@style/TEXT"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toEndOf="@id/cardCryptoImg"
                android:layout_marginTop="10sp"
                android:layout_toStartOf="@id/msgRankSearch"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp"/>


            <TextView
                android:id="@+id/txtCryptoSymbolSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="6sp"
                android:layout_marginBottom="11sp"
                android:layout_toEndOf="@id/cardCryptoImg"
                android:text="btc" />

            <TextView
                android:id="@+id/txtRankSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                style="@style/TEXT"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="10sp"/>

            <TextView
                android:id="@+id/msgRankSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank : "
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/txtRankSearch"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>