<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:id="@+id/layoutNews">

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/light_grey"/>

    <ImageView
        android:id="@+id/imgNews"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8sp"
        android:src="@drawable/image2" />

    <TextView
        android:id="@+id/txtNewsHeading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="News Title"
        android:layout_marginBottom="40sp"
        android:textSize="20sp"
        android:layout_marginEnd="8sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="8sp"
        style="@style/TEXT"
        android:layout_toEndOf="@id/imgNews"/>

    <TextView
        android:id="@+id/txtNewsTags"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:text="BTC|Market"
        android:layout_marginBottom="10sp"
        android:layout_toStartOf="@id/txtNewsPublish"
        android:layout_marginEnd="5sp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/imgNews"/>

    <TextView
        android:id="@+id/txtNewsPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10sp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8sp"/>

</RelativeLayout>