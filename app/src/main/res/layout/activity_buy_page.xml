<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Buy"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgBuyPageCrypto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:maxWidth="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/flag_republic_of_the_congo" />

    <TextView
        android:id="@+id/txtBuyPageCryptoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imgBuyPageCrypto"
        android:fontFamily="@font/alata"
        android:text="bitcoin"
        android:textSize="23dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtBuyPageCryptoType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@+id/txtBuyPageCryptoName"
        android:text="eth"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/alata"
        />

    <TextView
        android:id="@+id/txtBuyPageCryptoSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/txtBuyPageCryptoName"
        android:layout_toRightOf="@+id/imgBuyPageCrypto"
        android:text="bte"
        android:textSize="20dp"
        android:fontFamily="@font/alata"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview19"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/txtBuyPageCryptoSymbol"
        android:layout_marginTop="18dp"
        android:text="Limit Price"
        android:fontFamily="@font/alata"
        android:layout_marginStart="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview29"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/txtBuyPageCryptoSymbol"
        android:layout_toRightOf="@id/textview19"
        android:layout_marginTop="18dp"
        android:text="Quantity"
        android:fontFamily="@font/alata"
        android:layout_marginStart="128dp"
        />
    <TextView
        android:id="@+id/txtBuyPageCryptoInDeVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/txtBuyPageCryptoName"
        android:layout_toRightOf="@+id/txtBuyPageCryptoSymbol"
        android:text="1234"
        android:textSize="18dp"
        android:fontFamily="@font/alata"
        />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:text="value"
        android:textSize="18dp"
        android:fontFamily="@font/alata"
        />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text5"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:text="$12345"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="@font/alata"
        />

        <LinearLayout
            android:id="@+id/buttonlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBuyPageCryptoInDeVal"
            android:layout_centerInParent="true"
            android:layout_marginStart="40sp"
            android:layout_marginTop="10sp">

            <EditText
                android:id="@+id/etBuyPageLimitPrice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/txtBuyPageCryptoInDeVal"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="@drawable/edittext_buy_sell_page_background"
                android:textAlignment="center"
                android:textColor="#FFC107" />

            <EditText
                android:id="@+id/etBuyPageQuantity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/txtBuyPageCryptoInDeVal"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5sp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_buy_sell_page_background"
                android:textAlignment="center"
                android:textColor="#FFC107" />

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview5"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/buttonlayout"
        android:layout_marginTop="20dp"
        android:text="Laverage"
        android:fontFamily="@font/alata"
        android:layout_marginStart="35dp"
        />

    <SeekBar
        android:id="@+id/seekbarBuyPageLaverage"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/textview5"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:max="20"
        android:progress="2"
        android:stepSize="5"
        android:thumb="@drawable/circle_svgrepo_com"
        android:progressTint="@color/light_green"
        />

    <TextView
        android:id="@+id/txtBuyPageSeekbarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/seekbarBuyPageLaverage"
        android:textSize="23dp"
        android:fontFamily="@font/alata"
        />

    <LinearLayout
        android:id="@+id/profitlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBuyPageSeekbarValue"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/buttonlayout"
            android:layout_marginTop="20dp"
            android:text="Set Profite:"
            android:fontFamily="@font/alata"
            android:layout_marginStart="35dp"
            />

        <EditText
            android:id="@+id/etBuyPageSetProfit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/txt9"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edittext_buy_sell_page_background"
            android:paddingStart="20dp"
            android:textColor="#FFC107" />
        <TextView
            android:id="@+id/txt19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/buttonlayout"
            android:layout_marginTop="5dp"
            android:text="Est. PNL :"
            android:fontFamily="@font/alata"
            android:layout_marginStart="35dp"
            android:textSize="13dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stoploselayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profitlayout"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/buttonlayout"
            android:layout_marginTop="20dp"
            android:text="Stop loss:"
            android:fontFamily="@font/alata"
            android:layout_marginStart="35dp"
            />

        <EditText
            android:id="@+id/etBuyPageStopLoss"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/txt9"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edittext_buy_sell_page_background"
            android:paddingStart="20dp"
            android:textColor="#FFC107" />

        <TextView
            android:id="@+id/txt12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/buttonlayout"
            android:layout_marginTop="5dp"
            android:text="Est. PNL :"
            android:fontFamily="@font/alata"
            android:layout_marginStart="35dp"
            android:textSize="13dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/balanceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stoploselayout"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Balance : "
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtByPageBalance"
            android:layout_marginStart="5dp"
            android:text="1234"
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:layout_toRightOf="@id/textview1"
            />
    </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBuyPageBuy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="20sp"
            android:layout_below="@id/balanceLayout"
            android:background="@drawable/button_buy_background"
            android:fontFamily="@font/alata"
            android:text="Buy"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="#fff" />

    </RelativeLayout>

</ScrollView>