<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/light_grey"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImageCommentLayout"
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:cardCornerRadius="40sp"
        android:layout_margin="10sp">

        <ImageView
            android:id="@+id/imgCommentLayoutUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtCommentLayoutUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Aniket Pandav"
        style="@style/TEXT"
        android:textSize="16sp"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@id/cardImageCommentLayout"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtCommentLayoutTiming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txtCommentLayoutUserName"
        android:layout_marginTop="10sp"
        android:text="1h"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="6sp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/txtCommentDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cardImageCommentLayout"
        android:layout_below="@id/txtCommentLayoutUserName"
        android:text="Hello! nice , wow , awsome"
        style="@style/TEXT"
        android:textColor="@color/black"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="5sp"
        android:textSize="18sp"/>

</RelativeLayout>